# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
VITE_APP_VERSION=1.0.0

# Auth Feature Flags
# When true, temporarily allow legacy device token auth alongside Supabase auth during migration
VITE_ENABLE_DEVICE_TOKEN_AUTH=false

# Google Gemini API Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Email for MyMemory API (legacy - now using Gemini)
# TRANSLATION_EMAIL=your_email@example.com

# AI Insights Debugging & Rate Limits
# Set to true to enable verbose AI logs in console
VITE_AI_DEBUG=false
# Requests per minute client-side limiter (dev safeguard)
VITE_AI_RPM=6
# Optional daily request cap
VITE_AI_DAILY_CAP=
# Price per 1K tokens (USD) to estimate costs in meta
VITE_AI_PRICE_PER_1K=0.15